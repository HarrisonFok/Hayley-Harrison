<% include ./partials/header %>

<style>
	a {
		color: yellow;
	}

	h1 {
		margin-left: 650px;
		color: #ff9933;
	}

	#newBtn {
		margin-left: 1000px;
	}
</style>

<h1>Blogs Page</h1>
<a href="/photos/blogs/new"><button id="newBtn" class="ui inverted blue button">New</button></a>

<% blogs.forEach(function(blog) { %>
	<div class="ui main text container segment">
		<div class="ui huge blue header"><h3><%= blog.title %></h3></div>

		<div class="ui top attached">
			<div class="item">
				<img class="ui centered circular image" src="<%=blog.image %>">
				<div class="content">
					<span><%=blog.created.toDateString() %></span>
				</div>
				<div class="description">
					<p><%-blog.body.substring(0,100) %>...</p>
				</div>
				<button class="ui green button" ><a href="/photos/blogs/<%= blog._id %>">Read More</a></button>
			</div>
		</div>
	</div>
<% }) %>

<% include ./partials/footer %>