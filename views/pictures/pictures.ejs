<h1>Pictures Page</h1>

<style>
body {
	background: #FF512F;  /* fallback for old browsers */
	background: -webkit-linear-gradient(to right, #F09819, #FF512F);  /* Chrome 10-25, Safari 5.1-6 */
	background: linear-gradient(to right, #F09819, #FF512F); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */	
}
</style>

<% pics.forEach(function(pic) { %>
	<div>
		<img src="<%= pic.image %>" >
		<a href="/pictures/<%= pic._id %>">Read More</a>

		<a href="/pictures/<%= pic._id %>/edit">Edit</a>

		<form action="/pictures/<%= pic._id %>?_method=DELETE" method="POST">
			<button>Delete</button>
		</form>
	</div>
<% }) %>

<a href="/pictures/newPic"><button>Add New Picture</button></a>