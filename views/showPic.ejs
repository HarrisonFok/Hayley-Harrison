<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">

<style>
	body {
		background: #2980B9;  /* fallback for old browsers */
		background: -webkit-linear-gradient(to right, #FFFFFF, #6DD5FA, #2980B9);  /* Chrome 10-25, Safari 5.1-6 */
		background: linear-gradient(to right, #FFFFFF, #6DD5FA, #2980B9); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
	}

	img, #imgDesc {
		padding-left: 500px;
	}

	h1 {
		padding-left: 650px;
	}

	#commentBtn {
		margin-left: 1080px;
	}

	#commentsDiv {
		background: #833ab4;  /* fallback for old browsers */
		background: -webkit-linear-gradient(to right, #fcb045, #fd1d1d, #833ab4);  /* Chrome 10-25, Safari 5.1-6 */
		background: linear-gradient(to right, #fcb045, #fd1d1d, #833ab4); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
		width: 70%;
		margin-left: 250px;
	}

	#indComm {
		margin-left: 200px;
	}
</style>

<h1>SHOW image </h1>

<img src="<%= foundPic.image %>">
<p id="imgDesc"><%= foundPic.description %></p>

<p><a href="/pictures/<%= foundPic._id %>/comments/new" class="btn btn-success" id="commentBtn">Add New Comment</a></p>

<div id="commentsDiv">
	<% foundPic.comments.forEach(function(comment){ %>
		<p id="indComm"><strong><%= comment.author %>:</strong> <%= comment.text %></p>
	<% }) %>
</div>